    <script>
        const gradeValues = {
            'S': 10, 'A': 9, 'B': 8, 'C': 7, 'D': 6, 'E': 5, 'F': 0
        };

        function clearAll() {
            document.getElementById('credits').value = '';
            document.getElementById('grades').value = '';
            document.getElementById('cgpaDisplay').textContent = '0.00';
            document.getElementById('totalCredits').textContent = '0';
            document.getElementById('totalPoints').textContent = '0';
            document.getElementById('totalSubjects').textContent = '0';
            document.getElementById('percentage').textContent = '0%';
            showMessage('All data cleared!', 'success');
        }

        function showMessage(message, type) {
            const errorDiv = document.getElementById('errorMessage');
            const successDiv = document.getElementById('successMessage');
            
            errorDiv.style.display = 'none';
            successDiv.style.display = 'none';
            
            if (type === 'error') {
                errorDiv.textContent = message;
                errorDiv.style.display = 'block';
            } else {
                successDiv.textContent = message;
                successDiv.style.display = 'block';
            }
            
            setTimeout(() => {
                errorDiv.style.display = 'none';
                successDiv.style.display = 'none';
            }, 3000);
        }

        function calculateCGPA() {
            const creditsInput = document.getElementById('credits').value.trim();
            const gradesInput = document.getElementById('grades').value.trim().toUpperCase();
            
            if (!creditsInput || !gradesInput) {
                showMessage('Please enter both credits and grades!', 'error');
                return;
            }
            
            const credits = creditsInput.split(/\s+/).map(c => parseFloat(c)).filter(c => !isNaN(c));
            const grades = gradesInput.split(/\s+/).filter(g => g.length > 0);
            
            if (credits.length !== grades.length) {
                showMessage(`Mismatch: ${credits.length} credits vs ${grades.length} grades!`, 'error');
                return;
            }
            
            if (credits.length === 0) {
                showMessage('No valid credits found!', 'error');
                return;
            }
            
            if (credits.some(c => c <= 0)) {
                showMessage('All credits must be positive numbers!', 'error');
                return;
            }
            
            const invalidGrades = grades.filter(g => !gradeValues.hasOwnProperty(g));
            if (invalidGrades.length > 0) {
                showMessage(`Invalid grades: ${invalidGrades.join(', ')}. Use: S, A, B, C, D, E, F`, 'error');
                return;
            }
            
            let totalCredits = 0;
            let totalPoints = 0;
            
            for (let i = 0; i < credits.length; i++) {
                totalCredits += credits[i];
                totalPoints += credits[i] * gradeValues[grades[i]];
            }
            
            const cgpa = totalPoints / totalCredits;
            const percentage = (cgpa * 9.5).toFixed(1);
            
            const cgpaDisplay = document.getElementById('cgpaDisplay');
            cgpaDisplay.textContent = cgpa.toFixed(2);
            cgpaDisplay.classList.add('updated');
            
            setTimeout(() => {
                cgpaDisplay.classList.remove('updated');
            }, 600);
            
            document.getElementById('totalCredits').textContent = totalCredits;
            document.getElementById('totalPoints').textContent = totalPoints.toFixed(1);
            document.getElementById('totalSubjects').textContent = credits.length;
            document.getElementById('percentage').textContent = percentage + '%';
            
            showMessage('CGPA calculated successfully!', 'success');
        }

        document.addEventListener('keypress', (e) => {
            if (e.key === 'Enter') {
                calculateCGPA();
            }
        });
    </script>
